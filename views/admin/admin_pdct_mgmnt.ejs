    <link href="https://cdn.datatables.net/v/bs5/dt-1.13.7/datatables.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/v/bs5/dt-2.0.4/datatables.min.css" rel="stylesheet">
 
</head>
</head>

<body>
    <div class="wrapper">
        <aside id="sidebar">
            <div class="d-flex">
                <button class="toggle-btn" type="button">
                    <i class="lni lni-grid-alt"></i>
                </button>
                <div class="sidebar-logo">
                    <a href="#">ZAINAY</a>
                </div>
            </div>
            <ul class="sidebar-nav">
                <li class="sidebar-item">
                    <a href="admin_user_mgmnt" class="sidebar-link">
                        <i class="lni lni-user"></i>
                        <span>USER MANAGEMENT</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="admin_pdct_mgmnt" class="sidebar-link">
                        <i class="lni lni-agenda"></i>
                        <span>PRODUCT MANAGEMENT</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="admin_category" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                        data-bs-target="#auth" aria-expanded="false" aria-controls="auth">
                        <i class="lni lni-protection"></i>
                        <span>  CATEGORY MANAGEMENT</span>
                    </a>
                    <ul id="auth" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a href="#" class="sidebar-link">Add category</a>
                        </li>
                        <li class="sidebar-item">
                            <a href="#" class="sidebar-link">Update Category</a>
                        </li>
                    </ul>
                </li>
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                        data-bs-target="#multi" aria-expanded="false" aria-controls="multi">
                        <i class="lni lni-layout"></i>
                        <span>Multi Level</span>
                    </a>
                    <ul id="multi" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a href="#" class="sidebar-link collapsed" data-bs-toggle="collapse"
                                data-bs-target="#multi-two" aria-expanded="false" aria-controls="multi-two">
                                Two Links
                            </a>
                            <ul id="multi-two" class="sidebar-dropdown list-unstyled collapse">
                                <li class="sidebar-item">
                                    <a href="#" class="sidebar-link">Link 1</a>
                                </li>
                                <li class="sidebar-item">
                                    <a href="#" class="sidebar-link">Link 2</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </li>
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link">
                        <i class="lni lni-popup"></i>
                        <span>ORDER MANAGEMENT</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link">
                        <i class="lni lni-cog"></i>
                        <span>COUPON MANAGEMENT</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link">
                        <i class="lni lni-cog"></i>
                        <span>BANNER MANAGEMENT</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link">
                        <i class="lni lni-cog"></i>
                        <span>SALES REPORT</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link">
                        <i class="lni lni-cog"></i>
                        <span>ENQUIRIES</span>
                    </a>
                </li>
            </ul>
            <div class="sidebar-footer">
                <a href="#" class="sidebar-link">
                    <i class="lni lni-exit"></i>
                    <span>Logout</span>
                </a>
            </div>
        </aside>
        <div class="main">
            <nav class="navbar navbar-expand px-4 py-3">
                <form action="#" class="d-none d-sm-inline-block">

                </form>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a href="#" data-bs-toggle="dropdown" class="nav-icon pe-md-0">
                                <img src="/account.png" class="avatar img-fluid" alt="">
                            </a>
                            <div class="dropdown-menu dropdown-menu-end rounded">

                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
            <main class="content px-3 py-4">
                <div class="container-fluid">
                    <div class="mb-3">
                        <h5 class="fw-bold fs-4 mb-3">PRODUCT MANAGEMENT</h5>
                        <div class="row">
                            <div class="col-12 col-md-4 ">
                              <button class="btn-add-product"><a href="admin_add_product">ADD PRODUCT</a></button>  
                            </div>
                            
                            
                            
                        </div>
                        <h3 class="fw-bold fs-4 my-3">Product list
                        <div class="row">
                            <div class="col-12">
                                <% if (Array.isArray(productList) && productList.length > 0) { %>
                                <table class="table table-striped" style="margin-top: 80px;" >
                                    <thead>
                                        <tr class="highlight">
                                            <th scope="col">#</th>
                                            <th scope="col">Product ID</th>
                                            <th scope="col">Image</th>
                                            <th scope="col">Product Name</th>
                                            <th scope="col">Category</th>
                                            <th scope="col">Description</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Status</th>
                                            <th scope="col"></th>
                                            <th scope="col"> Action</th>
                                            <th scope="col">        </th>
                                            

                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% productList.forEach((product,index)=>{%>
                                        <tr>
                                            <td><%= index %></td>
                                            <td><%= product.productid %></td>
                                            <td><img src="/customer/images/<%= product.image %>" width="30" class="img-thumbnail"/></td>
                                            <td><%= product.productname %></td>
                                            <td><%= product.category %></td>
                                            <td><%= product.description%></td>
                                            <td><%= product.price %></td>
                                            <td><%= product.isBlocked ? 'Blocked' : 'Active' %></td> 
                                            <!--------------Display status------------->
                                            <td><a href="/admin/block-product/<%= product._id%>" class="text-success"><i class="fas fa-user-lock"></i></a></td>
                                            <td><a href="/admin/unblock-product/<%= product._id%>" class="text-danger"><i class="fas fa-user-lock"></i></a></td>
                                            <td><a href="/admin/edit_product/<%= product._id%>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a></td>
                                           
                                        </tr>
                                        <% })   %>    
                                       
                                    </tbody>
                                </table>
                                <% }else {%>
            
                                    <h2 class="text-center text-secondary mt-5">No products are found !</h2>
                               <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row text-body-secondary">
                        <div class="col-6 text-start ">
                            <a class="text-body-secondary" href=" #">
                                <strong>ZAINAY</strong>
                            </a>
                        </div>
                        <div class="col-6 text-end text-body-secondary d-none d-md-block">
                            <ul class="list-inline mb-0">
                                <li class="list-inline-item">
                                    <a class="text-body-secondary" href="#">Contact</a>
                                </li>
                                <li class="list-inline-item">
                                    <a class="text-body-secondary" href="#">About Us</a>
                                </li>
                                <li class="list-inline-item">
                                    <a class="text-body-secondary" href="#">Terms & Conditions</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
   
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
     integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
   
    <script src="https://cdn.datatables.net/v/bs5/dt-2.0.4/datatables.min.js"></script>
    <script >const hamBurger = document.querySelector(".toggle-btn");

        hamBurger.addEventListener("click", function () {
          document.querySelector("#sidebar").classList.toggle("expand");
        });</script>
       
        <script>

            $(document).ready(function(){
                $("table").DataTable({order:[0,'asc']});
        
                })
             
        </script>
</body>

</html>


